<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_public_eeeeee"
    android:gravity="center"
    android:orientation="vertical">

    <com.wyh.modulecommon.helper.circularprogress.ModulePublicCircularProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:indeterminate="true"
        android:indeterminateOnly="false"
        app:module_public_cpb_colors="@array/module_public_gplus_colors"/>

    <TextView
        android:id="@+id/loading_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text="@string/module_public_common_loading_message"
        android:textColor="@color/module_public_999999"
        android:textSize="14sp"/>
</LinearLayout>