<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_public_ffffff"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_above="@+id/message_info"
        android:layout_centerHorizontal="true"
        android:id="@+id/message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/message_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/module_public_bcbcbc"
        android:textSize="17dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/message_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_go"
        android:textSize="14sp"
        android:textColor="@color/module_public_ffffff"
        />

</RelativeLayout>